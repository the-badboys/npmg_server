// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model users {
  id        String   @id @default(uuid())
  email     String   @unique
  firstName String
  lastName  String
  role      Role
  password  String
  createdAt DateTime @default(now())
}

model npmg{
  id String @id @default(uuid())
  name String @unique
  mother String
  father String
  family String
  dob String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  isSilverBacked Boolean @default(false)
  families     families   @relation(fields: [family], references: [id])
}

model families{
  id String @id @default(uuid())
  family_name String   @unique
  leader String @unique
}

enum Role {
  USER
  ADMIN
  RANGER
  DOCTOR
}
