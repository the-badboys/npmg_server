// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model users {
  id        String   @id @default(uuid())
  email     String   @unique
  firstName String
  lastName  String
  role      Role
  password  String
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
  RANGER
  DOCTOR
}
